@model ProjectLogViewModel

                <div class="form-horizontal" style="background-color: white;">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <!-- Project -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.ProjectId, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.Select2EditorFor(x => x.ProjectId, x => x.ProjectId, x => x.ProjectIdProjectName)
                            @Html.ValidationMessageFor(model => model.ProjectId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <!-- Entry Name -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.EntryName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.t4mvcEditorFor(model => model.EntryName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.EntryName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <!-- Entry Date -->
                    <div class="form-group" data-render-function='t4mvc.formatDate'>
                        @Html.LabelFor(model => model.EntryDate, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.t4mvcEditorFor(model => model.EntryDate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.EntryDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <!-- Hours -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.Hours, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.t4mvcEditorFor(model => model.Hours, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Hours, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>

